<h2>Large</h2>
<p><button class="btn btn--large {{ modifier }}">{{ text }}</button></p>
<p><button class="btn btn--large btn--inline {{ modifier }}">{{ text }}</button></p>

<h2>Medium / Default</h2>
<p><input type="button" class="btn btn--medium {{ modifier }}" value="{{ text }}"></p>
<p><input type="button" class="btn btn--medium btn--inline {{ modifier }}" value="{{ text }}"></p>

<h2>Small</h2>
<p><a class="btn btn--small {{ modifier }}">{{ text }}</a></p>
<p><a class="btn btn--small btn--inline {{ modifier }}">{{ text }}</a></p>
