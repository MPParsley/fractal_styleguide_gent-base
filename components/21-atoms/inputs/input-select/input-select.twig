<select name="selectfield" id="selectfield" class="{{ modifier }}">
  {% for option in options %}

    {% if option.optgroup %}
      <optgroup label="{{ option.label }}">
        {% for opt in option.optgroupoptions %}
          <option>{{ opt.label }}</option>
        {% endfor %}
      </optgroup>

    {% else %}
      <option>{{ option.label }}</option>
    {% endif %}

  {% endfor %}
</select>
