<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Preview Layout</title>
    <link href="//fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,400italic" rel="stylesheet" type="text/css" />
    <link media="all" rel="stylesheet" href="{{ '/css/main.css' | path }}">
    <link media="all" rel="stylesheet" href="{{ '/css/styleguide.css'| path }}">
    <meta name="MobileOptimized" content="320">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <h1>Styleguide</h1>

  <div class="preview-inner-container">
    <h2>Colors</h2>
    {% include '@colors' %}
  </div>

  <div class="preview-inner-container">
    <h2>Fonts & text styles</h2>
    {% include '@fonts' %}
  </div>

  <div class="preview-inner-container">
    <h2>Headings</h2>
    {% include '@h1' %}
    {% include '@h2' %}
    {% include '@h3' %}
    {% include '@h4' %}
    {% include '@h5' %}
    {% include '@h6' %}
  </div>

  <div class="preview-inner-container">
    <h3>Small buttons</h3>
    {% include '@button-sm' with { 'text': 'Button' } %}

    <h3>Medium buttons</h3>
    {% include '@button-md' with { 'text': 'Button' } %}

    <h3>Large buttons</h3>
    {% include '@button-lg' with { 'text': 'Button' } %}
  </div>

  <div class="preview-inner-container">
    <h2>Images</h2>

    <h3>Default image</h3>
    {% include '@image' %}

    <h3>Image without styling</h3>
    {% include '@image-no-styling' %}

    <h3>Image as a circle (only usable with square images)</h3>
    {% include '@image-circle' %}
  </div>

  <div class="preview-inner-container">
    <h2>Stad Gent Icons</h2>
    {% for unicode, icon in icons %}
        <p><i class="icon-{{ icon }}"></i> .icon-{{ icon }}</p>
    {% endfor %}
  </div>

  <div class="preview-inner-container">
    {% include '@textfield'
      with {
        'label': 'Textfield',
        'placeholder': 'Placeholder',
        'description': 'Lorem ipsum dolor set.',
      }
    %}
    {% include '@password'
      with {
        'label': 'Password',
        'placeholder': 'Placeholder',
        'description': 'Lorem ipsum dolor set.',
      }
    %}
    {% include '@date'
      with {
        'label': 'Date',
        'placeholder': 'Placeholder',
        'description': 'Lorem ipsum dolor set.',
      }
    %}
    {% include '@datetime'
      with {
        'label': 'Datetime',
        'placeholder': 'Placeholder',
        'description': 'Lorem ipsum dolor set.',
      }
    %}
    {% include '@email'
      with {
        'label': 'Email',
        'placeholder': 'Placeholder',
        'description': 'Lorem ipsum dolor set.',
      }
    %}
    {% include '@file'
      with {
        'label': 'File',
        'description': 'Lorem ipsum dolor set.',
      }
    %}
    {% include '@textarea'
      with {
        'label': 'Textarea',
        'placeholder': 'Placeholder',
        'description': 'Lorem ipsum dolor set.',
      }
    %}
    {% include '@checkbox'
      with {
       'label': 'Checkbox',
      }
    %}
    {% include '@checkbox'
      with {
       'label': 'Checkbox',
      }
    %}
    {% include '@radio'
      with {
       'label': 'Radio',
      }
    %}
    {% include '@radio'
      with {
       'label': 'Radio',
      }
    %}
    {% include '@select'
      with {
        'label': 'Select',
        'description': 'Lorem ipsum dolor set.',
        "options": [
          {
            "label": "Option 1"
          },
          {
            "label": "Option 2"
          },
          {
            "optgroup": true,
            "label": "Option group",
            "optgroupoptions": [
              {
                "label": "Option 3"
              },
              {
                "label": "Option 4"
              }
            ]
          }
        ]
      }
    %}
    {% include '@multiselect'
      with {
        'label': 'Multiselect',
        'description': 'Lorem ipsum dolor set.',
        "options": [
          {
            "label": "Option 1"
          },
          {
            "label": "Option 2"
          },
          {
            "label": "Option 3"
          },
          {
            "label": "Option 4"
          }
        ]
      }
    %}
  </div>

  <div class="preview-inner-container">
  <h2>Grid usage</h2>
    <div class="row show-grid">
        <div class="col-mobile-12">.col-mobile-12</div>
    </div>
    <div class="row show-grid">
        <div class="col-mobile-12 col-tablet-3 col-desktop-9">.col-mobile-12 .col-tablet-3 .col-desktop-9</div>
        <div class="col-mobile-12 col-tablet-9 col-desktop-3">.col-mobile-12 .col-tablet-9 .col-desktop-3</div>
    </div>
    <div class="row show-grid">
        <div class="col-mobile-12 col-tablet-3 col-desktop-push-9">.col-mobile-12 .col-tablet-3 .col-desktop-push-9</div>
        <div class="col-mobile-12 col-tablet-9 col-desktop-pull-3">.col-mobile-12 .col-tablet-9 .col-desktop-pull-3</div>
    </div>
    <div class="row show-grid">
        <div class="col-mobile-6 col-mobile-offset-3">.col-mobile-offset-3 .col-mobile-6</div>
    </div>
    <div class="row show-grid">
        <div class="col-mobile-6">
            <div class="row show-grid">
                <div class="col-mobile-6">.col-mobile-6</div>
                <div class="col-mobile-6">.col-mobile-6</div>
            </div>
        </div>
        <div class="col-mobile-6">.col-mobile-6</div>
    </div>
    <div class="row show-grid">
        <div class="col-mobile-12 hidden-desktop">
            .hidden-desktop
        </div>
        <div class="col-mobile-12 hidden-tablet">
            .hidden-tablet
        </div>
        <div class="col-mobile-12 hidden-mobile">
            .hidden-mobile
        </div>
        <div class="col-mobile-12 visible-desktop">
            .visible-desktop
        </div>
        <div class="col-mobile-12 visible-tablet">
            .visible-tablet
        </div>
        <div class="col-mobile-12 visible-mobile">
            .visible-mobile
        </div>
    </div>
  </div>

  <div class="preview-inner-container">
    <h2>Disclaimer block</h2>
    {% include '@disclaimer-block' %}
  </div>

  <div class="preview-inner-container">
    <h2>Disclaimer block</h2>
    {% include '@post-address-block' %}
  </div>

  <div class="preview-inner-container">
    <h2>Disclaimer block</h2>
    {% include '@social-media-block' %}
  </div>

  <div class="preview-inner-container">
    <h2>Disclaimer block</h2>
    {% include '@header' %}
  </div>

  <div class="preview-inner-container">
    <h2>Disclaimer block</h2>
    {% include '@breadcrumbs' %}
  </div>

  <div class="preview-inner-container">
    <h2>Disclaimer block</h2>
    {% include '@search' %}
  </div>

  <div class="preview-inner-container">
    <h2>Section basic: default</h2>
    {% include '@section-default' %}
  </div>

  <div class="preview-inner-container">
    <h2>Section basic: Inverse</h2>
    {% include '@section-inverse' %}
  </div>

  <div class="preview-inner-container">
    <h2>Section basic: Highlighted</h2>
    {% include '@section-highlighted' %}
  </div>

  <div class="preview-inner-container">
    <h2>Section basic: Accent</h2>
    {% include '@section-accent' %}
  </div>

  <div class="preview-inner-container">
    <h2>Section basic: Wrapper</h2>
    {% include '@section-wrapper' %}
  </div>

</body>
</html>
