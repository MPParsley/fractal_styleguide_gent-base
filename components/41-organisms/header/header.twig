<header class="section--wrapper">
  <div class="content-container">
    <div id="logo">
      {% include '@logo' %}
    </div>
    <div id="main-menu" class="header-component">
      {% include '@link' with {
        'url': '#',
        'text': 'Menu'
      } %}
    </div>
    <div id="profile" class="header-component right">
      {% include '@link' with {
        'url': '#',
        'text': '<i class="icon-user"></i> Profile'
      } %}
    </div>
    <div id="header-search" class="header-search header-component right">
      {% include '@search' with { 'text': '<i class="icon-search" ></i>', 'placeholder': 'test', 'modifier': 'inline' } %}
    </div>
  </div>
</header>
